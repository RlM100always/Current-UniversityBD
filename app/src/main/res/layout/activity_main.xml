<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:id="@+id/draw_layout"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <!-- Main Activity Design -->



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="265dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#006400"
                    android:layout_marginLeft="10dp"
                    android:text="Discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView

                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="10dp"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="215dp">
                    <com.denzcoskun.imageslider.ImageSlider
                        android:layout_margin="8dp"
                        android:id="@+id/image_slider"
                        android:background="@drawable/image_barisal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iss_auto_cycle="true"
                        app:iss_period="1000"
                        app:iss_delay="1000"
                        app:iss_text_align="CENTER"/>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:textColor="#006400"
                    android:gravity="center_horizontal"

                    android:text="Choice your Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/general_id"
                        android:layout_weight="1"
                        android:foreground="@drawable/category_uni_back"
                        android:clickable="true"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/design_default_color_surface"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_marginTop="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/public_university"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_marginTop="120dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:text="General University"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="10dp"
                        android:id="@+id/national_id"
                        app:cardBackgroundColor="@color/design_default_color_surface"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="12dp"
                        android:foreground="@drawable/category_uni_back"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_marginTop="40dp"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/national_university"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_marginTop="120dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:text="National University"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="10dp"
                        android:id="@+id/engineering_id"
                        app:cardBackgroundColor="@color/design_default_color_surface"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="12dp"
                        android:foreground="@drawable/category_uni_back"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_marginTop="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/engineering_logo"
                            android:layout_width="90dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_marginTop="120dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:text="Engineering University"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="10dp"
                        android:id="@+id/sat_id"
                        app:cardBackgroundColor="@color/design_default_color_surface"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="12dp"
                        android:foreground="@drawable/category_uni_back"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_marginTop="40dp"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/sat_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_marginTop="120dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:text="Science and Technology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/design_default_color_surface"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/private_id"
                        android:foreground="@drawable/category_uni_back"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:padding="5dp"
                            android:layout_marginTop="40dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/private_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_marginTop="120dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:text="Private University"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:cardPreventCornerOverlap="true"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/design_default_color_surface"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/agriculture_id"
                        android:foreground="@drawable/category_uni_back"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_marginTop="40dp"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@drawable/agriculture_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_marginTop="120dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:text="Agriculture University"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp">

            </LinearLayout>





        </LinearLayout>


    </ScrollView>





    <!-- Toolbar code -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/tolbar"
            android:background="@color/primary"
            app:title="BD University"
            app:titleTextColor="@color/white"
            />



    </LinearLayout>







    <!-- NavigationBar Code -->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"

        android:visibility="gone"
        app:itemTextColor="@color/black"
        app:itemIconTint="#EC5B01"
        android:background="#FEFCFC"
        android:layout_height="match_parent">

    </com.google.android.material.navigation.NavigationView>






</androidx.drawerlayout.widget.DrawerLayout>