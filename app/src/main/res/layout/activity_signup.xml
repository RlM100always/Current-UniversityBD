<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginandsignup.SignupActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/login_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="20dp"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/card_back"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#AA1515"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUP From"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#067AEF"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name "
            android:textSize="20sp"
         />

        <EditText
            android:id="@+id/signUpName"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Enter your name"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_marginTop="8dp"
            android:textColor="#067AEF"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
             />

        <EditText
            android:id="@+id/signUpEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Enter your email"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#067AEF"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20sp"
             />

        <EditText
            android:id="@+id/signUpPhone"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Enter your phone number"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#067AEF"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/signUpPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Enter your password"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#067AEF"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re Enter Password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/signUpReenterPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Re-enter your password"
            android:paddingLeft="5dp" />
        <TextView
            android:id="@+id/alreadySignUp"
            android:layout_marginTop="15dp"
            android:textColor="#D812641C"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="! Already Sign up..."
            android:textSize="20sp" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUpButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/log_back"
            android:elevation="105dp"
            android:text="Sign UP"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>