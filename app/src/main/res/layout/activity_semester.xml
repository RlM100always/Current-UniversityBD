    <androidx.appcompat.widget.Toolbar
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/back_pressed"
        android:textAlignment="center"
        android:id="@+id/semester_toolbarr"
        android:background="#00BCD4"
        />


    <FrameLayout
        android:padding="3dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/back_spinner"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <androidx.appcompat.widget.AppCompatSpinner
            android:drawSelectorOnTop="true"
            android:id="@+id/semester_spinner"
            android:outlineSpotShadowColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/linerar_id"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/add_icon"
        android:layout_margin="20dp"
        android:background="@drawable/log_back"
        android:elevation="10dp"
        android:padding="10dp"
        android:text="ADD COURSE"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calculate_cgpa"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/log_back"
        android:elevation="15dp"
        android:text="Calculate CGPA"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
</LinearLayout>