<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/back"
    tools:context=".cgpacalculator.SemesterActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginLeft="0dp"
        app:title="Calculate your CGPA"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/back_pressed"
        android:textAlignment="center"
        android:id="@+id/semester_toolbarr"
        android:background="@color/service_bar"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:padding="3dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <androidx.appcompat.widget.AppCompatSpinner
                android:drawSelectorOnTop="true"
                android:id="@+id/semester_spinner"
                android:outlineSpotShadowColor="#515050"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>
        <LinearLayout
            android:id="@+id/linerar_id"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <androidx.appcompat.widget.AppCompatButton
            android:foreground="@drawable/uni_background"
            android:clickable="true"
            android:id="@+id/add_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/add_icon"
            android:layout_margin="20dp"
            android:background="@drawable/log_back"
            android:elevation="20dp"
            android:padding="10dp"
            android:text="ADD COURSE"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatButton

            android:foreground="@drawable/uni_background"
            android:clickable="true"
            android:id="@+id/calculate_cgpa"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/log_back"
            android:elevation="20dp"
            android:text="Calculate CGPA"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:src="@drawable/calc_semester"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</ScrollView>
</LinearLayout>