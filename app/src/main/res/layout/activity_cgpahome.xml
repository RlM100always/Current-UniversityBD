<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cgpa_back"
    android:layout_height="match_parent"
    tools:context=".cgpacalculator.CGPAHomeActivity">

    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="CGPA Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/course_id"
        android:foreground="@drawable/uni_background"
        android:clickable="true"
        app:cardElevation="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        app:cardBackgroundColor="#030D44"
       android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/cg_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>


            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="Course Wise CGPA Calculate"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/semester_id"
        android:foreground="@drawable/uni_background"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardBackgroundColor="#030D44"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/cg_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView

                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:text="Semester Wise CGPA Calculate"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>