<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".service.TeacherDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="240dp">
                <ImageView
                    android:src="@drawable/default_placeholder"
                    android:scaleType="fitXY"
                    android:id="@+id/dt_image_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:background="@drawable/serchbar_background"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/person"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:text=" Name : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:layout_marginTop="5dp"
                    android:id="@+id/dt_name_id"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Md Rakibul Islam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:background="@drawable/serchbar_background"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/uni"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:text=" Department Name : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:layout_marginTop="5dp"
                    android:id="@+id/dt_dept_id"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Md Rakibul Islam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/email_icon"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:text=" Gmail : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:id="@+id/dt_gmail_id"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Md Rakibul Islam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/call_teacherinfo"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:text=" Phone Number : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:id="@+id/dt_phone_id"                        android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Md Rakibul Islam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_margin="6dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/person"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:text=" Biography : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/serchbar_background"
                    android:layout_marginTop="6dp"
                    android:id="@+id/dt_bio_id"                        android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Md Rakibul Islam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>





            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>