<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/image_ru"
                android:background="@drawable/serchbar_background"
                android:scaleType="centerCrop"
                android:id="@+id/hall_image_id"
                android:layout_width="120dp"
                android:layout_height="110dp"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/hall_uni_id"
                android:layout_margin="2dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_auto_stories_24"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="University of Dhaka"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="2dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/uni"
                android:id="@+id/hall_text_id"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="Fazlul Haque Muslim Hall"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/details_id_hall"
                android:layout_margin="3dp"
                android:drawableRight="@drawable/baseline_double_arrow_24"
                android:padding="5dp"
                android:backgroundTint="@color/custom_background_color"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="For Details"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/text1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text2_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text3_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text4_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>


</LinearLayout>