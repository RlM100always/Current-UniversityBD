<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context=".activity.NewsActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        app:navigationIcon="@drawable/back_pressed"
        android:id="@+id/tb_news"
        android:background="@color/back_upper"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <EditText
            android:paddingLeft="9dp"
            android:hint="Search here "
            android:drawableLeft="@drawable/search_icon"
            android:background="@drawable/serchbar_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Choose University Category..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd1"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="@color/documentary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="সকল নিউজ"
                                android:textColor="@color/white"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd2"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#4CAF50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="স্বায়ত্তশাসিত বিশ্ববিদ্যালয়"
                                android:textColor="@color/white"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd3"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="সরকারি বিশ্ববিদ্যালয়"
                                android:textColor="#2196F3"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd4"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#FFEB3B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="বেসরকারি বিশ্ববিদ্যালয়"
                                android:textColor="#333333"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd5"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#9C27B0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="প্রকৌশল ও বিজ্ঞান-প্রযুক্তি"
                                android:textColor="#FFFFFF"

                                />

                        </androidx.cardview.widget.CardView>








                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Carrier Path..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd6"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#9C27B0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="উচ্চ শিক্ষা"
                                android:textColor="@color/coloryellow"

                                />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd7"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#2196F3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="উদ্যোক্তা"
                                android:textColor="@color/white"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd8"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#FF5722"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="চাকরি"
                                android:textColor="@color/white"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd9"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#0CDDA7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ফ্রিল্যান্সিং"
                                android:textColor="@color/back"

                                />

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:foreground="@drawable/uni_background"
                            android:id="@+id/cd10"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#CDDC39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="রিমোট জব"
                                android:textColor="@color/back"

                                />

                        </androidx.cardview.widget.CardView>












                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Trending News..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/trendingNewsRecyclerViewId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>




                </LinearLayout>


            <TextView
                android:id="@+id/tv_category_id"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:text="সকল নিউজ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newsRecyclerViewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>










</LinearLayout>