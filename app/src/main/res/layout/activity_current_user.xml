<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgr"
    android:orientation="vertical"
    android:gravity="center"

    android:layout_height="match_parent"
    tools:context=".activity.CurrentUserActivity">

    <LinearLayout
        android:elevation="300dp"
        android:background="@drawable/current_user_background"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:text="DashBoard Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="8dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:foreground="@drawable/category_uni_back"
                android:id="@+id/current_user_cg_calc"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_cgpa_calculate_logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Calculate CGPA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/current_user_cg_details"
                android:foreground="@drawable/category_uni_back"

                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_cgpa_post_details"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="CGPA Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:foreground="@drawable/category_uni_back"

                android:id="@+id/current_user_bmi_calc"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_bmi_logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="BMI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:foreground="@drawable/category_uni_back"

                android:id="@+id/current_user_write_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_write_post" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Share your Expertisement"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:foreground="@drawable/category_uni_back"

                android:id="@+id/current_user_post_details"

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_post_details"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Post Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:foreground="@drawable/category_uni_back"
                android:id="@+id/current_user_time_management"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dashboard_time_management"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Time Management"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:foreground="@drawable/category_uni_back"
                android:id="@+id/current_user_mental_helth_detect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/public_university" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mental health"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:foreground="@drawable/category_uni_back"
                android:id="@+id/current_user_transction_details"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/public_university"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Transactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:foreground="@drawable/category_uni_back"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/public_university"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Write a Note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>







</LinearLayout>