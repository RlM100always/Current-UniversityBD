<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="@color/back"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:elevation="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/uni_background"
        app:cardCornerRadius="10dp"
        android:layout_width="260dp"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/trendingNesImageId"
            android:background="@drawable/edit_text_background"
            android:scaleType="fitXY"
            android:src="@drawable/image_du"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/trending_userpic_id"
            app:civ_border_width="1.4dp"
            app:civ_border_color="@color/custom_text_color"
            android:src="@drawable/admin"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/trending_username_id"
                android:maxLines="1"
                android:textStyle="bold"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:text="Admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_margin="3dp"
        android:maxLines="2"
        android:id="@+id/tnTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About University of Dhaka "
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />
    <TextView
        android:layout_margin="3dp"
        android:maxLines="1"
        android:id="@+id/tnDateId"
        android:layout_marginBottom="7dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="12 Septembor 2023 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>