<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:backgroundTint="@color/custom_dialogue"
                android:padding="10dp"
                android:gravity="top"
                android:id="@+id/update_name_id_ed"
                android:textColorHint="@color/hint_colour"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:drawablePadding="5dp"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"

                android:textColor="@color/blue"
                android:text="University"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:backgroundTint="@color/custom_dialogue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:backgroundTint="@color/black"
                    android:id="@+id/update_uni_id_tv"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>




            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Department "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:backgroundTint="@color/custom_dialogue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:backgroundTint="@color/black"

                    android:id="@+id/update_dept_id_tv"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Mobile "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:backgroundTint="@color/custom_dialogue"
                android:padding="10dp"
                android:gravity="top"
                android:id="@+id/update_mobile_id_tv"
                android:textColorHint="@color/hint_colour"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:drawablePadding="5dp"
                android:lines="10"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp" />

            <TextView
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Blood Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/custom_dialogue"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatSpinner

                    android:id="@+id/update_blood_id_tv"
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>


            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Hall name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:backgroundTint="@color/custom_dialogue"
                android:padding="10dp"
                android:gravity="top"
                android:id="@+id/update_hallName_id_tv"
                android:textColorHint="@color/hint_colour"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:drawablePadding="5dp"
                android:lines="10"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp" />
            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Hall Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:backgroundTint="@color/custom_dialogue"
                android:padding="10dp"
                android:gravity="top"
                android:id="@+id/update_hallNumber_id_tv"
                android:textColorHint="@color/hint_colour"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/serchbar_background"
                android:drawablePadding="5dp"
                android:lines="10"
                android:inputType="textMultiLine"
                android:paddingLeft="5dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:padding="10dp"
                android:id="@+id/update_profile_id_ab"
                android:foreground="@drawable/uni_background"
                android:clickable="true"
                android:backgroundTint="@color/statusbar"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Upadte Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>