<?xml version="1.0" encoding="utf-8"?><androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".splashscreen.SplashActivity"
    android:background="@color/back"
    >

    <ImageView
        android:id="@+id/imageViewsplashscreen"
        android:layout_width="300dp"
        android:layout_height="300dp"

        android:src="@drawable/university_splash"
         />
    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/textView1Splashscreen"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="University BD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/textView2Splashscreen"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Welcome to our App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.appcompat.widget.LinearLayoutCompat>