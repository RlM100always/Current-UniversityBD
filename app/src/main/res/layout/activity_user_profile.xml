<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context=".user_profile.UserProfileActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userprofilepic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/defaultprofile"

                    >

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karim Jannat"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_margin="5dp"></TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:elevation="15dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/back_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="10dp"
                    android:background="@color/back_upper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:background="@drawable/edit_text_background"
                        android:foreground="@drawable/uni_background"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/back"
                        android:textSize="17dp"
                        android:text="Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="abc@gmail.com"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/email_teacherinfo"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="University of Dhaka"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/uni"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0188828374 "
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/call_teacherinfo"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="O+"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/blood"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Set your Department"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/uni"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Set your Hall Name"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/uni"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Set your Hall Room Number"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/uni"
                        android:padding="5dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"></TextView>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="@drawable/category_uni_back"
                android:id="@+id/ll_specific_post"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/back_upper"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:text="See your Post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/lottieAnimationView"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:lottie_rawRes="@raw/click"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/category_uni_back"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/back_upper"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:text="Calculate CGPA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:lottie_rawRes="@raw/click"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="@drawable/category_uni_back"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/back_upper"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:text="CGPA Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:lottie_rawRes="@raw/click"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cgpaCalc"
                android:foreground="@drawable/category_uni_back"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/back_upper"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:text="Calculate CGPA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:lottie_rawRes="@raw/click"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </ScrollView>

</LinearLayout>