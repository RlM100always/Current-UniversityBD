<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsNewsActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_margin="4dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <ImageView
                android:src="@drawable/image_du"
                android:scaleType="fitXY"
                android:id="@+id/detailsNewsImageId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:padding="7dp"
            android:background="@drawable/edit_text_background"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/detailsNewsDateId"
            android:layout_weight="1"
            android:textColor="@color/documentary"
            android:textSize="18dp"
            android:text="Ravhvwfkqjf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="7dp"
            android:background="@drawable/edit_text_background"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/detailsNewsTitleId"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Ravhvwfkqjf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>






        <TextView
            android:layout_marginTop="6.5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/detailsNewsDescId"

            android:textColor="@color/black"
            android:textSize="17.5dp"
            android:text="Ravhvwfkqjf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginBottom="30dp"
            android:padding="7dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/detailsNewsAuthorId"
            android:layout_weight="1"
            android:textColor="@color/documentary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Ravhvwfkqjf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
</ScrollView>