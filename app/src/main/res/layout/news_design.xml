<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:foreground="@drawable/uni_background"
        android:layout_marginLeft="7dp"
        android:elevation="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                app:cardElevation="10dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/newsImage"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_du"
                    android:layout_width="145dp"
                    android:layout_height="120dp"/>



            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/news_design_user_image_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/admin"
                        app:civ_border_color="@color/custom_text_color"
                        app:civ_border_width="1.4dp" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:id="@+id/news_design_user_name_id"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:text="Admin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/news_design_user_uni_id"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textColor="@color/coloryellow"
                            android:textSize="12dp"
                            android:text="University of Dhaka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:id="@+id/newsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todays headline .Du Crashing in dhaka university"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />
                <TextView
                    android:maxLines="2"
                    android:text="About dhaka university"
                    android:id="@+id/newsDescription"
                    android:textColor="#898585"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:maxLines="1"
                    android:id="@+id/newsDate"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="10 Janauary,2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>













</LinearLayout>