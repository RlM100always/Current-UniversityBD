<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context=".activity.AllUniversityActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/back_pressed"
        android:id="@+id/all_uni_tolbar"
        >
        <androidx.appcompat.widget.SearchView
            android:layout_marginBottom="4dp"
            android:elevation="10dp"
            android:id="@+id/searchView_all_uni"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/serchbar_background"
            app:queryHint="Search here..."
            app:iconifiedByDefault="false"
            />



    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_university_rv_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>



</LinearLayout>