<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CC0815BB"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:foreground="@drawable/uni_background"
        android:elevation="20dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#0815BB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    app:cardElevation="10dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:id="@+id/newsImage"
                        android:scaleType="fitXY"
                        android:src="@drawable/googleg_standard_color_18"
                        android:layout_width="150dp"
                        android:layout_height="140dp"/>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:id="@+id/newsAuther"
                        android:padding="7dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:text="ESPN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/newsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todays headline .Du Crashing in dhaka university"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:maxLines="2"
                        android:text="Android Development"
                        android:id="@+id/newsDescription"
                        android:textColor="#898585"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/newsDate"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:text="10 Janauary,2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"

                    android:text="Update"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:text="Delete"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>